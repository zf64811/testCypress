{
  "scripts": {
    "cy:open": "cypress open",
    "test":"cypress run",
    "merge:reports":"mochawesome-merge cypress/reports/mochawesome*.json --output cypress/reports/merged-report.json",
    "report:html":"marge cypress/reports/merged-report.json -f report -o cypress/reports",
    "clean:reports": "rm -rf cypress/reports/*",
    "test:report": "npm run test && npm run merge:reports && npm run report:html",
    "cypress:test": "npm run clean:reports && cypress run",
    "ci:test": "npm run cypress:test && npm run merge:reports && npm run report:html"
  },
  "devDependencies": {
    "cypress": "^14.4.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
